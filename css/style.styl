@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Noto+Sans+JP:wght@100;300;400;500;700;900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Mulish:wght@200;300;400;500;600;700;800;900&display=swap');
@import './reset.css'

body
  width 100%
  background linear-gradient(271deg, #efefef, transparent)
  font-family "Montserrat" ,'Noto Sans JP',"游ゴシック体", 'Yu Gothic', "YuGothic", 'ヒラギノ角ゴシック Pro', 'Hiragino Kaku Gothic Pro', "メイリオ", "Meiryo", "Osaka", 'ＭＳ Ｐゴシック', 'MS PGothic', "sans-serif"
  min-height 100vh
  overflow-x hidden
  font-size 16px



// header

header
  position fixed
  top 80px
  left 100px
  display flex
  align-items center
  z-index 20
  transition all .5s
  h1#site--title
    width 100px
    transition all .5s
    a
      display flex
      flex-direction column
      color #111
      .cls-1
        fill: none;
        stroke: #111;
        stroke-miterlimit: 10
      div
        display flex
        justify-content space-between
      span
        font-size 11px
@media screen and (max-width : 1200px)
  header
    position fixed
    top 15px
    left 15px
    display flex
    align-items center
    z-index 20
    transition all .5s
    h1#site--title
      width auto
      transition all .5s
      a
        display flex
        flex-direction row
        align-items center
        color #111
        img
          width 50px
        .cls-1
          fill: none;
          stroke: #111;
          stroke-miterlimit: 10
        div
          margin-left 5px
          display flex
          justify-content space-between
        span
          font-size 12px


// footer

footer
  width 100%
  display block
  background linear-gradient(271deg, #210846, #04778e)
  background-repeat no-repeat
  div
    height 100px
    display flex
    width 100%
    justify-content center
    align-items center
    padding 10px
  p
    line-height 1.1
    font-size 12px
    font-weight bold
    color #FFF
    // font-size 36px
    font-family 'Montserrat'


// wrap main

.wrap
  margin 0 auto
  padding 20vh 100px 0px 100px
  transition all .5s
  @media screen and (max-width : 1200px)
    padding 0px 10px 0px 10px
main
  margin 0 auto
  max-width 1040px
  min-height 100vh
  @media screen and (max-width : 1200px)
    margin 80px auto 0px
    width 100%

// content

.article--header
  max-width 960px
  padding-bottom 15px
  margin 0 auto
  background rgba(255,255,255,.5)
  background transparent
  h1.title
    padding 50px 25px
    font-weight bold
    font-size 26px
    text-align center
  .thumb
    width 100%
    img
      width 100%
      opacity 0
  .category
    display flex
    justify-content center
    padding-bottom 60px
    li
      width 40px
      height 40px
      background #333
      border-radius 3px
      padding 5px
      display flex
      align-items center
      justify-content center
      margin-right 5px
      margin-left 5px
      img
        filter grayscale(50%)
aside.toc--aside
  right 0
  top 0
  margin 0 auto 40px
  max-width 960px
  h5
    color #FFF
    background #111
    margin 0
    padding 10px
    text-align center
  ul li
    background #EEE
    ul li a
      padding-left 1.6rem
    a
      display block
      padding 10px
      color #111
      font-size 16px
      &:hover
        background #CCC
#toc--toggle
  display none
.article--content
  max-width 960px
  padding 15px
  margin 0 auto 60px
  font-family 'mulish', 'Noto Sans JP',"游ゴシック体", 'Yu Gothic', "YuGothic", 'ヒラギノ角ゴシック Pro', 'Hiragino Kaku Gothic Pro', "メイリオ", "Meiryo", "Osaka", 'ＭＳ Ｐゴシック', 'MS PGothic', "sans-serif"
  // background rgba(255,255,255,.5)
  background transparent
  overflow hidden
  > *
    word-break break-word
  .nuxt-content-highlight
    margin-bottom 25px
  p
    font-size 14px
    line-height 1.8
    margin-bottom 25px
    display block
  p code,td code
      background: #efefef;
      border: 1px solid #aaa;
      margin 0px 2px
      padding: 0px 4px;
      border-radius: 3px;
      font-family 'mulish','Noto Sans JP',"游ゴシック体", 'Yu Gothic', "YuGothic", 'ヒラギノ角ゴシック Pro', 'Hiragino Kaku Gothic Pro', "メイリオ", "Meiryo", "Osaka", 'ＭＳ Ｐゴシック', 'MS PGothic', "sans-serif"
  pre
    overflow-x auto
  img
    opacity 0
  h1
    padding 50px 25px
    font-weight bold
    font-size 20px
    text-align center
  h2,h3,h4,h5,h6
    margin 0 0 20px 0
    font-weight 500
  h2
    margin-top 60px
    border-bottom 2px solid #222
    padding 10px
    font-size 22px
    @media screen and (max-width : 1200px)
      font-size 20px
  > h2:nth-of-type(1)
    margin-top 20px
  h3
    margin-top 40px
    padding 10px
    background rgba(60,60,60,.8)
    color #FFF
    font-size 18px
    font-weight 500
    @media screen and (max-width : 1200px)
      font-size 18px
  h4
    margin-top 30px
    font-size 18px
    padding-left 10px
    border-left 2px solid #222
    @media screen and (max-width : 1200px)
      font-size 18px
  h5
    font-size 20px
    @media screen and (max-width : 1200px)
      font-size 18px
  h6
    font-size 18px
    @media screen and (max-width : 1200px)
      font-size 16px
  p
    font-size 16px
    margin 0 0 25px 0
  > blockquote
    margin-bottom 25px
    background rgba(230,230,230,.8)
    color rgb(30,30,30)
    padding 15px
    p:last-child
      margin-bottom 0
  > ul
    width 100%
    margin-bottom 25px
    li
      list-style-type disc
      margin-left 20px
      p
        margin-bottom 0
  > table
    width 100%
    margin-bottom 25px
    border-collapse collapse
    border 1px solid #ddd
    table-layout fixed
    background rgba(255,255,255,.5)
    th,td
      padding 10px
      border 1px solid #ddd
      min-width 200px
      @media screen and (max-width : 1200px)
        min-width 0px
    tr:hover
      background-color rgba(230,241,255,.8)
  hr
    margin 25px 0px
  section
    margin-bottom 80px
  .remark-code-title
    font-size: 12px;
    position: absolute;
    right: 0;
    z-index: 1;
    padding: 3px 7px;
    color: #EEE
  div.iframe
    position relative
    padding-top 62.5%
    width 100%
    margin-bottom 25px
    iframe
      max-width 100%
      width 100%
      height 100%
      position absolute
      top 0
      left 0
  div.twitter-tweet
    margin 0 auto
  .highlight pre
    padding 10px
.nuxt-content-highlight
  position relative
.nuxt-content-highlight span.filename
  position absolute
  z-index 1
  font-size 12px
  right 0
  background #111
  color #eee
  padding 2px
  border-radius 0px 0.3em
pre[class*="language-"].line-numbers
  padding-left 0em

.article--content
  a::before
    transform: scaleX(0);
    transform-origin: bottom right;

  a:hover::before
    transform: scaleX(1);
    transform-origin: bottom left;

  a::before
    content: " ";
    display: block;
    position: absolute;
    top: 0; right: 0; bottom: 0; left: 0;
    inset: 0 0 0 0;
    background: linear-gradient(271deg, #ff0000, #04ff04, #efff00);
    z-index: -1;
    transition: transform .3s ease;
  a:hover
    text-decoration none
  a,a:visited
    position relative
    color #0089ff
    font-weight 500

// list card
.article--list
  display flex
  flex-wrap wrap
  justify-content space-between

li.card
  display block
  width 47%
  position relative
  margin-top 30px
  overflow hidden
  @media screen and (max-width:1200px)
    width 100%
  a
    display flex
    flex-wrap wrap
    align-items center
    color #111
    padding 0px
    transition all .4s
    &:hover
      background rgba(50,50,50,.0)
      .date,h2.title
        color #00ffa3
    figure
      width 100%
      height 240px
      overflow hidden
      position relative
      margin-bottom 10px
      img
        width 100%
        height 100%
        position absolute
        object-fit cover
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        transition all 1s
        opacity 0
        &:hover
          transform scale(1.1)
    h2.title
      font-size 16px
      overflow hidden
      max-height 3.2rem
      text-overflow ellipsis
      white-space normal
      line-clamp 2
      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical
      font-weight 500
      margin-bottom 30px
    .date
      font-size 13px
      text-align right
      color #111
      font-weight bold
      position absolute
      bottom 8px
      left 0px
    .info
      width calc(100%)
    .category
      position absolute
      bottom 5px
      display flex
      li
        width 30px
        height 30px
        background #333
        border-radius 3px
        padding 5px
        display flex
        align-items center
        justify-content center
        margin-right 5px
        img
          filter grayscale(50%)
      @media screen and (max-width:1200px)
        position absolute
        bottom 0
        li
          width 30px
          height 30px
          background #333
          border-radius 3px
          padding 5px
          display flex
          align-items center
          justify-content center
          margin-right 5px
          img
            filter grayscale(50%)

// canvas

.canvas
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index -1

.canvas__body 
  width 100%
  height 100%
